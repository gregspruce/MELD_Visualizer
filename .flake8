[flake8]
max-line-length = 100
extend-ignore = E203,W503,E501
exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    reports,
    .venv,
    .tox,
    .eggs,
    *.egg,
    tests/reports
per-file-ignores =
    __init__.py:F401
    tests/*:S101
max-complexity = 10
import-order-style = google
