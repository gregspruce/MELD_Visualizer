# CI Environment Configuration for MELD Visualizer Tests
# Override settings for GitHub Actions and other CI environments

# Base URL (same as test)
BASE_URL=http://localhost:8050

# Extended timeouts for CI environment
DEFAULT_TIMEOUT=60000
NAVIGATION_TIMEOUT=60000
ACTION_TIMEOUT=20000

# Browser settings for CI
HEADLESS=true
SLOW_MO=0

# Test data paths (same as test)
TEST_DATA_DIR=fixtures/test_data
CSV_TEST_FILE=sample_meld_data.csv
GCODE_TEST_FILE=sample_toolpath.nc

# Screenshot and video settings for CI
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure
TRACE_MODE=retain-on-failure

# Performance testing thresholds (more lenient for CI)
LOAD_TIME_THRESHOLD=10000
RENDER_TIME_THRESHOLD=5000

# Visual regression testing
VISUAL_THRESHOLD=0.3
UPDATE_SNAPSHOTS=false

# Logging for CI
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=true

# CI-specific settings
RETRY_COUNT=2
PARALLEL_WORKERS=1
FAIL_ON_CONSOLE_ERRORS=true