# Test Environment Configuration for MELD Visualizer - Playwright MCP
# Base URL for the application
BASE_URL=http://localhost:8050

# Test timeouts (milliseconds)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000
PLOTLY_RENDER_TIMEOUT=15000

# Browser settings for MCP
HEADLESS=false
SLOW_MO=0
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
DEVICE_SCALE_FACTOR=1

# Test data paths
TEST_DATA_DIR=fixtures/test_data
CSV_TEST_FILE=sample_meld_data.csv
GCODE_TEST_FILE=sample_toolpath.nc
UPLOAD_TIMEOUT=30000

# Screenshot and video settings
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure
TRACE_MODE=on-first-retry
SCREENSHOT_QUALITY=90
VIDEO_SIZE_WIDTH=1920
VIDEO_SIZE_HEIGHT=1080

# Performance testing thresholds
LOAD_TIME_THRESHOLD=5000
RENDER_TIME_THRESHOLD=2000
PLOTLY_LOAD_THRESHOLD=3000
API_RESPONSE_THRESHOLD=1000

# Visual regression testing
VISUAL_THRESHOLD=0.2
UPDATE_SNAPSHOTS=false
VISUAL_DIFF_THRESHOLD=0.1
PIXEL_RATIO=1

# Network interception and mocking
ENABLE_NETWORK_MOCKING=true
MOCK_API_RESPONSES=true
CACHE_NETWORK_REQUESTS=false
NETWORK_IDLE_TIMEOUT=2000

# Console monitoring
MONITOR_CONSOLE_ERRORS=true
MONITOR_NETWORK_FAILURES=true
FAIL_ON_CONSOLE_ERRORS=false
FAIL_ON_NETWORK_FAILURES=false

# MCP-specific settings
MCP_USER_AGENT=MELD-Visualizer-Test-Agent/1.0
MCP_ENABLE_HAR_RECORDING=true
MCP_ENABLE_VIDEO_RECORDING=true
MCP_ENABLE_TRACING=true

# Dash application specific
DASH_DEBUG=false
DASH_DEV_TOOLS=true
WAIT_FOR_DASH_READY=true
DASH_CALLBACK_TIMEOUT=5000

# File system paths
REPORTS_DIR=../reports
SCREENSHOTS_DIR=../reports/screenshots
VIDEOS_DIR=../reports/videos
NETWORK_LOGS_DIR=../reports/network
VISUAL_BASELINES_DIR=../visual/expected
VISUAL_DIFFS_DIR=../visual/diffs

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false
ENABLE_NETWORK_LOGGING=true
ENABLE_CONSOLE_LOGGING=true